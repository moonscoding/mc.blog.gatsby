{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "prettier",
        "prettier/react"
    ],
    "plugins": ["react", "import", "jsx-a11y"],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "lines-between-class-members": ["error", "always"],
        "padding-line-between-statements": 0,

        "import/no-unresolved": 0,

        "no-unused-vars": 0,

        "react/prop-types": 0,
        "react/react-in-jsx-scope": "off"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 10,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "globals": {
        "graphql": false
    }
}
